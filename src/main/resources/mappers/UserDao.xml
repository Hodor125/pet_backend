<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hodor.dao.UserDao">
    <resultMap id="UserMap" type="com.hodor.pojo.User">
        <id property="id" column="id"/>
        <result property="nickName" column="nick_name"/>
        <result property="password" column="password"/>
        <result property="power" column="power"/>
        <result property="tel" column="tel"/>
        <result property="email" column="email"/>
        <result property="createTime" column="create_time"/>
        <result property="pId" column="p_id"/>
        <result property="pImage" column="p_image"/>
        <result property="address" column="address"/>
        <result property="age" column="age"/>
        <result property="sex" column="sex"/>
        <result property="name" column="name"/>
        <result property="state" column="state"/>
    </resultMap>

    <select id="getUserByUserNameAndPassWord" resultMap="UserMap">
        select * from t_user where id=#{id} and password=#{passWord}
    </select>

    <select id="getUserListByQueryLimit" resultMap="UserMap">
        select * from t_user
        <where>
            <if test="query != null and query != ''">
                nick_name like concat('%', #{query}, '%' )
            </if>
            <if test="power != null">
                power=#{power}
            </if>
        </where>
        limit #{start},#{size}
    </select>

    <select id="getUserListByQuery" resultMap="UserMap">
        select id from t_user
        <where>
            <if test="query != null and query != ''">
                nick_name like concat('%', #{query}, '%' )
            </if>
            <if test="power != null">
                power=#{power}
            </if>
        </where>
    </select>

    <insert id="addUser" useGeneratedKeys="true" keyProperty="id">
        insert into t_user(nick_name,`password`,power,email,tel,p_id,p_img,address,age,sex,`name`,state)
        values (#{nickName},#{password},#{power},#{email},#{tel},#{pId},#{pImage},#{address},#{age},#{sex},#{name},#{state})
    </insert>
</mapper>
