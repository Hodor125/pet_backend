<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hodor.dao.UserDao">
    <resultMap id="UserMap" type="com.hodor.pojo.User">
        <id property="id" column="id"/>
        <result property="nickName" column="nick_name"/>
        <result property="password" column="password"/>
        <result property="power" column="power"/>
        <result property="tel" column="tel"/>
        <result property="email" column="email"/>
        <result property="createTime" column="create_time"/>
        <result property="pId" column="p_id"/>
        <result property="pImage" column="p_img"/>
        <result property="address" column="address"/>
        <result property="age" column="age"/>
        <result property="sex" column="sex"/>
        <result property="name" column="name"/>
        <result property="state" column="state"/>
    </resultMap>

    <select id="getUserByUserNameAndPassWord" resultMap="UserMap">
        select * from t_user where id=#{id} and password=#{passWord}
    </select>

    <select id="getUserListByQueryLimit" resultMap="UserMap">
        select * from t_user
        <where>
            (
            <if test="query != null and query != ''">
                and (nick_name like concat('%', #{query}, '%' )
                or name like concat('%', #{query}, '%' ))
            </if>
            <if test="power != null">
                and power=#{power}
            </if>
            )
        </where>
        order by state asc,id desc
    </select>

    <select id="getUserListByQuery" resultMap="UserMap">
        select id from t_user
        <where>
            <if test="query != null and query != ''">
                and (nick_name like concat('%', #{query}, '%' )
                or name like concat('%', #{query}, '%' ))
            </if>
            <if test="power != null">
                and power=#{power}
            </if>
        </where>
        order by state asc,id desc
    </select>

    <insert id="addUser" useGeneratedKeys="true" keyProperty="id">
        insert into t_user(nick_name,`password`,power,email,tel,p_id,p_img,address,age,sex,`name`,state)
        values (#{nickName},#{password},#{power},#{email},#{tel},#{pId},#{pImage},#{address},#{age},#{sex},#{name},#{state})
    </insert>

    <insert id="register" useGeneratedKeys="true" keyProperty="id">
        insert into t_user(nick_name,`password`)
        values (#{nickName},#{password})
    </insert>

    <update id="updateUser">
        update t_user
        <set>
            <if test="nickName != null and nickName != ''">
                nick_name=#{nickName},
            </if>
            <if test="password != null and password != ''">
                password=#{password},
            </if>
            <if test="power != null">
                power=#{power},
            </if>
            <if test="tel != null and tel != ''">
                tel=#{tel},
            </if>
            <if test="email != null and email != ''">
                email=#{email},
            </if>
            <if test="pId != null and pId != ''">
                p_id=#{pId},
            </if>
            <if test="pImage != null and pImage != ''">
                p_img=#{pImage},
            </if>
            <if test="address != null and address != ''">
                address=#{address},
            </if>
            <if test="age != null">
                age=#{age},
            </if>
            <if test="sex != null and sex != ''">
                sex=#{sex},
            </if>
            <if test="name != null and name != ''">
                name=#{name},
            </if>
            <if test="state != null">
                state=#{state},
            </if>
        </set>
        where id=#{id}
    </update>

    <delete id="deleteById">
        delete from t_user where id=#{id}
    </delete>

    <select id="getUserListById" resultMap="UserMap">
        select * from t_user where id=#{id}
    </select>
</mapper>
